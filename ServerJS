// server.js
import express from "express";
import cors from "cors";
import fetch from "node-fetch"; // built-in on Node 18+, remove if not needed

const app = express();
app.use(cors());
app.use(express.json());

const OPENAI_API_KEY = process.env.OPENAI_API_KEY;

app.post("/generate-report", async (req, res) => {
  try {
    const data = req.body;

    const playerProfile = `
Name: ${data.name}
Days per week playing: ${data.daysPerWeek}
Sore areas: ${data.soreAreas}
Warm-up: ${data.warmup}
Recovery: ${data.recovery}
Injuries: ${data.injuries}
Energy level: ${data.energy}
    `.trim();

    const response = await fetch("https://api.openai.com/v1/chat/completions", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Authorization: `Bearer ${OPENAI_API_KEY}`,
      },
      body: JSON.stringify({
        model: "gpt-4o-mini",
        messages: [
          {
            role: "system",
            content: `You are a Certified Pickleball Movement Specialist from Pickleball Movement Training. Write a short, motivational "Pickleball Performance Report" in under 350 words. Tone: friendly, simple, encouraging. Use emojis (ðŸ“ðŸ’ªðŸ”¥).`,
          },
          {
            role: "user",
            content: `Player info:\n${playerProfile}\n\nGenerate their Pickleball Performance Report using sections:\n1ï¸âƒ£ Why They Feel Sore\n2ï¸âƒ£ Why They Feel Slow\n3ï¸âƒ£ Whatâ€™s Holding Them Back\n4ï¸âƒ£ Injury Risk Zone\n5ï¸âƒ£ Top 3 Fixes\nEnd with a CTA to join the 30-Day Pickleball Kickstart Program.`,
          },
        ],
        temperature: 0.7,
        max_tokens: 800,
      }),
    });

    const json = await response.json();
    const report = json.choices?.[0]?.message?.content || "Error generating report.";
    res.json({ report });
  } catch (err) {
    console.error(err);
    res.status(500).json({ report: "Error generating report. Try again later." });
  }
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => console.log("âœ… Server running on port " + PORT));
